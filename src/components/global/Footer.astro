const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<footer class="section gap-y-10 py-3 lg:gap-y-32">
	<div class="relative mt-4 flex w-full items-center justify-between ...">
		<div class="flex flex-col">
			<div>Â©2025 Triluminous Club</div>
			<div>
				Developed by 
				<a href="https://merlette.pages.dev/" target="_blank" class="hover:underline">Merlette</a>.
			</div>
		</div>
